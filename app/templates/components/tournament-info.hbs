      <div class="navbar-form navbar-right">
        <div class="form-group">
          <label>Город:</label>
          {{input class="form-control" value=api.city placeholder="Город" enter="refresh"}}
        </div>
      </div>
  </div>
</nav>

{{#if stats}}
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Команда</th>
        <th class="text-center">М</th>
        <th class="text-center">В</th>
        {{#each (range 1 stats.tours) as |tour|}}
          {{#each (range 1 stats.questions) as |question|}}
            <th class="text-center {{if (eq question 1) 'left-bordered'}}">{{add question (mult (sub tour 1) 12)}}</th> 
          {{/each}}
        {{/each}}
      </tr>    
    </thead>
    <tbody>
      {{#each stats.commands as |command|}}
        <tr>
          <td title={{command.realName}}>{{command.name}}</td>
          <td>{{command.place}}</td>
          <td class="text-right">{{command.total}}</td>
          {{#each-in command.results as |tourId tourResults|}}
            {{#each-in tourResults as |question result|}}
              <td class="text-center {{if (eq (mod question stats.questions) 1) 'left-bordered'}}">
                {{#if (eq result '1')}}
                  <span class="text-success glyphicon glyphicon-plus"></span>
                {{else}}
                  <span class="text-muted glyphicon glyphicon-minus"></span>
                {{/if}}
              </td>
            {{/each-in}}
          {{/each-in}}
        </tr>
      {{/each}}
    </tbody>
    <tfoot>
      <tr>
        <th colspan="3">% взятия</th>
        {{#if percentage}}
          {{#each-in percentage as |question percent|}}
            <td class="text-center small-padding {{if (eq (mod question stats.questions) 1) 'left-bordered'}}" style={{percentcolor percent 'background'}}>
              <small>{{percent}}</small>
            </td>
          {{/each-in}}
        {{else}}
          <td class="text-center left-bordered" colspan={{mult stats.tours stats.questions}}>Загрузка...</td>
        {{/if}}
      </tr>
    </tfoot>
  </table>
{{else}}
  <p>Загрузка статистики...</p>
{{/if}}