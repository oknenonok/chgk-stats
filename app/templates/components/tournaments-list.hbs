<nav class="navbar navbar-default">
  <div class="container-fluid">
      <p class="navbar-text"><strong>Результаты синхронов ЧГК</strong></p>
  </div>
</nav>

{{#if tournaments}}
  <table class="table table-striped">
  <thead>
    <tr>
      <th>Название</th>
      <th>Окончание</th>
      <th>DL</th>
     </tr>
  </thead>
  <tbody>
    {{#each tournaments as |tournament|}}
      <tr>
        <td>
          {{#link-to 'tournament' tournament.idtournament}}{{tournament.name}}{{/link-to}}
        </td>
        <td>
          {{tournament.date_end}}
        </td>
        <td>
          {{tournament.dl}}
        </td>        
      </tr>
    {{/each}}
    </tbody>
 </table>
{{else if loadError}}
  <p class="text-danger">{{loadError.message}}</p>
{{else}}
  <p>Загрузка списка турниров...</p>
{{/if}}